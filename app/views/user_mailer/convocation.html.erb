              <p style="margin: 0; white-space: pre-wrap; padding-bottom: 15px; text-align: right;"><%= t('email.convocation.felicitation_ar') %> <%= @prenom %>!</p>
              <p style="margin: 0; white-space: pre-wrap; padding-bottom: 15px;text-align: right;"><%= t('email.convocation.retenu_ar') %></p>
              <p style="margin: 0; white-space: pre-wrap; padding-bottom: 15px; text-align: right;"><%= t('email.convocation.date_ar') %> <strong><%= @convocation.date %> <%= @convocation.heure %></strong> <%= t('email.convocation.lieu_ar') %> <strong><%= @convocation.lieu %></strong></p>
