<div id="login-form">
  <div class="container card half-screen">
    <div class="flex-column">
      <%= link_to root_path(I18n.locale) do %>
      <%= image_tag 'logo-MCJR.png', class: 'small-logo' %>
      <% end %>
      <h2> Mot de passe oublié?</h2>
    </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, class: 'login-input' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Récupérer mon mot de passe", class: 'login-submit v-btn rounded' %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>

  </div>
</div>

