

<% if false %>
  <% new_category = nil %>
  <%= form_for(@inscription, url: (@inscription.new_record? ? inscriptions_path : inscription_path(locale: I18n.locale, id: inscription))) do |form| %>
    <%= form.fields_for :reponses do |reponse_form| %>
      <div class="form-inputs">
        <% if new_category != reponse_form.object.question.categorie %>
          <h4><%= t("inscription.cat.#{reponse_form.object.question.categorie}") %></h4>
          <% new_category = reponse_form.object.question.categorie %>
        <% end %>
        <p><%= t("question.#{reponse_form.object.question.categorie}.#{reponse_form.object.question.contenu}") %></p>
        <%= reponse_form.text_area :contenu %>
        <%= reponse_form.hidden_field :question_id, value: reponse_form.object.question_id %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>



<% new_category = nil %>
<% if @inscription.new_record? %>
  <% url_ins = inscriptions_path %>
<% else %>
  <% url_ins = inscription_path(locale: I18n.locale, id: inscription) %>
<% end %>
<%= simple_form_for @inscription, url: url_ins do |inscription| %>
  <%= inscription.simple_fields_for :reponses do |reponse| %>
    <% if new_category != reponse.object.question.categorie %>
      <h4><%= t("inscription.cat.#{reponse.object.question.categorie}") %></h4>
      <% new_category = reponse.object.question.categorie %>
    <% end %>
    <p><%= t("question.#{reponse.object.question.categorie}.#{reponse.object.question.contenu}") %></p>
    <%= reponse.input :contenu, label: false %>
    <%= reponse.input :question_id, value: reponse.object.question_id, as: :hidden %>
  <% end %>
  <%= inscription.input :photo_1 %>
  <%= inscription.input :photo_1_cache, as: :hidden %>
  <%= inscription.input :photo_2 %>
  <%= inscription.input :photo_2_cache, as: :hidden %>
  <%= inscription.input :photo_3 %>
  <%= inscription.input :photo_3_cache, as: :hidden %>
  <%= inscription.button :submit %>
<% end %>
