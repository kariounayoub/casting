<div class="container">
  <% unless @inscriptions.nil? %>
    <% @inscriptions.each do |inscription| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <div class="card-product-infos">
          <% rep = inscription.reponses.select { |r| r.blank? }.count %>
          <% tot = inscription.reponses.count %>
          <h2><%= inscription.evenement.nom %> - (<%= rep %> / <%= tot %>)</h2>
          <% if policy(inscription).edit? %>
            <p>
              <%= link_to edit_inscription_path(inscription) do %>
                <i class="far fa-edit"></i>
              <% end %>
            </p>
          <% end %>
          <% if policy(inscription).destroy? %>
            <p>
              <%= link_to inscription, method: :delete, data: { confirm: 'Etes-vous sure de vouloir supprimer?' } do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </p>
          <% end %>
          <% if policy(inscription).show? %>
            <p>
              <%= link_to inscription do %>
                <i class="far fa-eye"></i>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if policy(Inscription).create? %>
    <%= link_to new_inscription_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
  <% end %>
</div>
