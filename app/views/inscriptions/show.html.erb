<p id="notice"><%= notice %></p>
<div class="container offset-top">
    <h2 class='page-title text-center'><%= t("pages.insc_show")%> # <%= @inscription.id %></h2>
    <br><br>
    <div class="show-card">
      <div class="row">
        <div class="col-12 col-sm-4 offset-sm-4">
          <%= cl_image_tag @inscription.photo_candidat, height: 300, class: 'w-100', crop: :fit %>
        </div>
      </div>
      <h3><span class="text-gray">Utilisateur :</span> <span><%= @inscription.user.email %></span></h3>
      <h3><span class="text-gray">Evenement :</span> <span><%= @inscription.evenement.nom %></span></h3>
    </div>
    <% if current_user.caster %>
    <div class="show-card" id='note-inscription'>
      <h3 class="card-title">Notes</h3>
      <% unless @inscription.notes.find_by_user_id(current_user.id) %>
        <button class="btn btn-lg btn-danger float-right" data-toggle="modal" data-target="#note" id="button-modal-note">Ajouter Une Note</button>
        <div id="modal-note">
          <%= render 'inscriptions/shared/note_form', inscription: @inscription, note: Note.new %>
        </div>
      <% end %>
      <h4 class='text-gray'>Note Cuisine</h4>
      <% if @inscription.notes.map{|n| n.note_cuisine}&.size > 0 %>
        <div id='avg-note-cuisine' data-rating='<%= (@inscription.notes.map{|n| n.note_cuisine}&.sum.to_f / @inscription.notes.map{|n| n.note_cuisine}&.size)  %>'></div>
      <% end %>
      <h4 class='text-gray'>Note Personalit√©</h4>
      <% if @inscription.notes.map{|n| n.note_personalite}&.size > 0%>
        <div  id='avg-note-personalite' data-rating='<%= (@inscription.notes.map{|n| n.note_personalite}&.sum.to_f / @inscription.notes.map{|n| n.note_personalite}&.size)  %>'></div>
      <% end %>
    </div>
    <% end %>
    <div class="show-card">
        <h3 class='card-title'>Photos</h3>
      <div class="row">
        <div class="col-12 col-sm-4">
          <%= cl_image_tag @inscription.photo_1, height: 300, class: 'w-100', crop: :fit %>
        </div>
        <div class="col-12 col-sm-4">
          <%= cl_image_tag @inscription.photo_2, height: 300, class: 'w-100', crop: :fit %>
        </div>
        <div class="col-12 col-sm-4">
          <%= cl_image_tag @inscription.photo_3, height: 300, class: 'w-100', crop: :fit %>
        </div>
      </div>
    </div>

    <div class="show-card">
      <h3 class='card-title'>Reponses</h3>
        <% new_category = nil %>
        <% @inscription.reponses.joins(:question).order(question_id: :asc).each do |reponse| %>
          <% if new_category != reponse.question.categorie %>
            <h3 class="category-title"><%= t("inscription.cat.#{reponse.question.categorie}") %></h3>
            <% new_category = reponse.question.categorie %>
          <% end %>
          <h4 class='text-gray'><%= t("question.#{reponse.question.categorie}.#{reponse.question.contenu}") %></h4>
          <h5 class='response'><%= reponse.contenu %></h5>
        <% end %>
    </div>

  <%= link_to 'Modifier', edit_inscription_path(I18n.locale, @inscription) %> |
  <%= link_to 'Retour', inscriptions_path %>
</div>




