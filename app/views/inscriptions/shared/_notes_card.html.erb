<h3 class="card-title">Notes</h3>
<% if inscription.notes.find_by_user_id(current_user.id) %>
  <button class="btn btn-lg btn-danger float-right" data-toggle="modal" data-target="#note" id="button-modal-note">Modifier Notes</button>
  <div id="modal-note">
    <%= render 'inscriptions/shared/note_form', inscription: inscription, note: inscription.notes.find_by_user_id(current_user.id) %>
  </div>
<% else %>
  <button class="btn btn-lg btn-danger float-right" data-toggle="modal" data-target="#note" id="button-modal-note">Ajouter Une Note</button>
  <div id="modal-note">
    <%= render 'inscriptions/shared/note_form', inscription: inscription, note: Note.new %>
  </div>
<% end %>
<h4 class='text-gray'>Note Cuisine</h4>
<% if inscription.notes.map{|n| n.note_cuisine}&.size > 0 %>
  <div id='avg-note-cuisine' data-rating='<%= inscription.avg_note_cuisine  %>'></div>
<% end %>
<h4 class='text-gray'>Note Personalit√©</h4>
<% if inscription.notes.map{|n| n.note_personalite}&.size > 0%>
  <div  id='avg-note-personalite' data-rating='<%= inscription.avg_note_personalite %>'></div>
<% end %>
