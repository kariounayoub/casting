<%= simple_form_for(@question, url: (@question.new_record? ? questions_path : question_path(locale: I18n.locale, id: question))) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :evenement, as: :radio_buttons, label_method: :nom %>
    <%= f.input :categorie %>
    <%= f.input :contenu %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
