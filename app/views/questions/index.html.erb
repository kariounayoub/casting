<div class="container">
  <% @questions.each do |question| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
      <div class="card-product-infos">

        <h2><%= question.evenement.nom %> - <%= question.categorie %></h2>
        <p><%= question.contenu %></p>

        <% if policy(question).edit? %>
          <p>
            <%= link_to edit_question_path(question) do %>
              <i class="far fa-edit"></i>
            <% end %>
            <%= link_to question, method: :delete, data: { confirm: 'Etes-vous sure de vouloir supprimer?' } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if policy(Question).create? %>
    <%= link_to new_question_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
  <% end %>
</div>
