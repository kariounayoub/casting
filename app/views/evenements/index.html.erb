<div class="container">
  <% @evenements.each do |evenement| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
      <div class="card-product-infos">
        <h2>
          <%= evenement.nom %>
          <% if evenement.actif %>
            <i class="far fa-calendar-check"></i>
          <% else %>
            <%= link_to activate_evenement_path(I18n.locale, evenement) do %>
              <i class="far fa-check-square"></i>
            <% end %>
          <% end %>
        </h2>
        <p>Le <strong><%= evenement.date %></strong> Ã  <strong> <%= evenement.adresse %></strong>.</p>
        <% if policy(evenement).edit? %>
          <p>
            <%= link_to edit_evenement_path(I18n.locale, evenement) do %>
              <i class="far fa-edit"></i>
            <% end %>
            <a href='/evenement' data-method="delete" data-confirm='Etes-vous sure de vouloir supprimer?'><i class="far fa-trash-alt"></i></a>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if policy(Evenement).create? %>
    <%= link_to new_evenement_path(I18n.locale) do %>
      <i class="fas fa-plus"></i>
    <% end %>
  <% end %>
</div>
