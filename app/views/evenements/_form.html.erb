<%= simple_form_for(@evenement, url: (@evenement.new_record? ? evenements_path : evenement_path(locale: I18n.locale, id: evenement))) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :date %>
    <%= f.input :adresse %>
    <%= f.input :actif %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'login-submit v-btn rounded' %>
  </div>
<% end %>
