<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= image_tag t(I18n.locale), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
          <% I18n.available_locales.each do |lang| %>
            <%= link_to lang_path(I18n.locale, lang), class: "dropdown-item" do %>
              <%= image_tag t(lang), class: "avatar dropdown-toggle" %>
            <% end %>
          <% end %>
        </div>
      </li>
      <% if user_signed_in? %>
        <% if current_user.admin == true %>
          <%= link_to root_path(I18n.locale), class: "navbar-brand" do %>
            <%= image_tag "logo-MCJR.png" %>
          <% end %>
          <li class="nav-item">
            <%= link_to t('navbar.evenements'), evenements_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('navbar.questions'), questions_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to t('navbar.dashboard'), inscriptions_path(I18n.locale), class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to t('navbar.inscription'), inscriptions_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('navbar.a_propos'), a_propos_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t('navbar.contact'), contact_path(I18n.locale), class: "nav-link" %>
          </li>
          <%= link_to root_path(I18n.locale), class: "navbar-brand" do %>
            <%= image_tag "logo-MCJR.png" %>
          <% end %>
          <li class="nav-item">
            <%= link_to t("navbar.episodes"), root_path(I18n.locale, anchor: "episodes"), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.jury"), root_path(I18n.locale, anchor: "jury"), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("navbar.candidats"), root_path(I18n.locale, anchor: "candidats"), class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <% if current_user.photo.blank? %>
            <img src="https://hadeplatform.com/img/default.png" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <% else %>
            <%= cl_image_tag current_user.photo, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to t('navbar.edit'), edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to t('navbar.logout'), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to t('navbar.login'), new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
