<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path(I18n.locale), class: "navbar-brand" do %>
    <%= image_tag "logo-MCJR.png" %>
  <% end %>

  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <%= t(I18n.locale) %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <% I18n.available_locales.each do |lang| %>
      <li><%= link_to t(lang), lang_path(I18n.locale, lang) %></li>
    <% end %>
  </ul>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.admin == true %>
          <li class="nav-item">
            <%= link_to "Evenements", evenements_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Questions", questions_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Dashboard", dashboard_path(I18n.locale), class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "A propos", a_propos_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_path(I18n.locale), class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Inscription", new_inscription_path(I18n.locale), class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Editer profil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Deconexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
