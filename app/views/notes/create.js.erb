  document.getElementById('note-inscription').innerHTML = '<%= j render "inscriptions/shared/notes_card", inscription: @inscription %>';
  document.getElementById("button-modal-note").click();
<% else %>
  document.getElementById("button-close-note").click();
  document.getElementById('note-inscription').innerHTML = '<%= j render "inscriptions/shared/notes_card", inscription: @inscription %>';
